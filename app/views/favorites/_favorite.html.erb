<% @task = Task.find(favorite.task_id) %>
<% user = @task.user %>
<li id="favorite-<%= favorite.id %>">
  <div class="row favorite-task">
    <div class="col-md-2">
      <%= link_to((image_tag @task.picture.url), task_path(@task), class: 'task-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to @task.name, task_path(@task) %></p>
      <p><%= @task.description %></p>
      <p class="cook-user">cooked by <%= link_to user.name, user_path(user) %></p>
    </div>
  </div>
</li>
