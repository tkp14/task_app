<%= form_with model: @comment, local: true do |f| %>
  <div class="col-md-6 form-comment">
    <%= f.label "コメント" %>
    <%= f.text_area :content, class: 'form-control', id: 'task_comment' %>
  </div>
  <div class="col-md-1 comment-btn"><br>
    <%= f.submit "返信", class: 'btn btn-primary' %>
  </div>
<% end %>
