<% comment_user = User.find(comment.user_id) %>
<li id="comment-<%= comment.id %>">
  <div class="row task-comment">
    <div class="col-md-4">
      <span class="user"><%= link_to comment_user.name, comment_user %></span>
    </div>
    <div class="col-md-8">
      <span><%= comment.content %></span>
    </div>
    <div class="col-md-10 comment-timestamp">
      <span>
        <%= time_ago_in_words(comment.created_at) %>前に投稿
      </span>
    </div>
    <div class="col-md-2 comment-delete">
      <% if current_user.id == comment.user_id %>
        <%= link_to "削除", comment_path(comment), method: :delete,
                       data: { confirm: "本当に削除しますか？" } %>
      <% end %>
    </div>
  </div>
</li>
